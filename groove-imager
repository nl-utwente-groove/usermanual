# export GROOVE_HOME="C:\\Program Files\\Groove\\groove-4_4_5\\bin"

# java -jar "${GROOVE_HOME}\\Imager.jar" $@

GROOVE_ECLIPSE=/cygdrive/d/eclipse/groove
GROOVE_ECLIPSE_LIB=${GROOVE_ECLIPSE}/lib

CLASSPATH=${GROOVE_ECLIPSE}/bin
for FILE in ${GROOVE_ECLIPSE_LIB}/*.jar; do \
    CLASSPATH=${CLASSPATH}:${FILE}; \
done
for FILE in ${GROOVE_ECLIPSE_LIB}/*/*.jar; do \
    CLASSPATH=${CLASSPATH}:${FILE}; \
done

IMAGER="java -cp `cygpath -p -w ${CLASSPATH}` groove.Imager"

${IMAGER} -v 0 $@
